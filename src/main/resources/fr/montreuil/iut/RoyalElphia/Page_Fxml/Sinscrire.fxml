<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.montreuil.iut.RoyalElphia.Controller.SinscrireControlleur">

    <center>
        <Pane>
            <children>
                <ImageView fitHeight="800.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../ImageFond/fond-acceuil.jpg" />
                    </image>
                </ImageView>
            </children>
            <children>
                <ImageView fitHeight="200.0" fitWidth="600.0" layoutX="260.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../ImageFond/bienvenue.png" />
                    </image>
                </ImageView>
            </children>
            <children>
                <VBox layoutX="234.0" layoutY="134.0" prefHeight="274.0" prefWidth="361.0">
               <children>
                  <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="362.0">
                     <children>
                        <Label alignment="TOP_CENTER" contentDisplay="CENTER" text="Inscription" />
                     </children>
                  </HBox>
                  <HBox prefHeight="40.0" prefWidth="362.0">
                     <children>
                        <Label prefHeight="18.0" prefWidth="83.0" text="Pseudo :" />
                        <TextField fx:id="pseudoLabel" />
                     </children>
                  </HBox>
                  <HBox prefHeight="40.0" prefWidth="362.0">
                     <children>
                        <Label prefHeight="18.0" prefWidth="83.0" text="Login :" />
                        <TextField fx:id="loginLabel" />
                     </children>
                  </HBox>
                  <HBox prefHeight="31.0" prefWidth="362.0">
                     <children>
                        <Label prefHeight="18.0" prefWidth="82.0" text="Mot de passe :" />
                        <TextField fx:id="mdpLabel" prefWidth="150.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="25.0" prefWidth="361.0" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="361.0">
                     <children>
                            <VBox prefHeight="89.0" prefWidth="240.0">
                           <children>
                              <HBox prefHeight="98.0" prefWidth="240.0" />
                                    <Button fx:id="inscriptionBouton" mnemonicParsing="false" onAction="#Inscription" prefHeight="65.0" prefWidth="200.0" style="-fx-background-color: red;" text="S'inscrire" textFill="white" />
                              <HBox prefHeight="100.0" prefWidth="200.0" />
                              <Button mnemonicParsing="false" onAction="#Retour" prefHeight="65.0" prefWidth="200.0" style="-fx-background-color: red;" text="Retour" textFill="white" />
                           </children>
                            </VBox>
                     </children>
                  </HBox>
               </children>
                </VBox>
            </children></Pane>
    </center>
</BorderPane>
