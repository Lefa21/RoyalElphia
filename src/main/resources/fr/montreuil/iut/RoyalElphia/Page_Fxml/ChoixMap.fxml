    <right>
        <VBox>
            <Label text="right" />
            <Label text="right" />
            <Label text="right" />
        </VBox>
    </right>

    <center>
        <Pane style="-fx-background-color: green;">
            <children>
                <HBox layoutX="71.0" layoutY="162.0" prefHeight="270.0" prefWidth="361.0">
                    <children>
      
                              <ImageView fitHeight="172.0" fitWidth="237.0" onMouseClicked="#CliqueMap1" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image fx:id="Map1" url="@../ImageMap/Map1.png" />
                            </image>
                        </ImageView>

                        <ImageView fitHeight="174.0" fitWidth="209.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image fx:id="Map2" url="@../ImageMap/Map2.png" />
                            </image>
                        </ImageView>

                    </children>
                </HBox>
            <VBox layoutX="179.0" layoutY="432.0" prefHeight="100.0" prefWidth="122.0">
               <children>
                  <Label prefHeight="28.0" prefWidth="102.0" text="Niveau" />

                   <RadioButton fx:id="buttonFacile" mnemonicParsing="false" prefHeight="20.0" prefWidth="95.0" selected="true" styleClass="label-bright" text="Facile">
